                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1" data-toggle="tab">Türkçe</a>
                                </li>
                                <li>
                                    <a href="#tab_2" data-toggle="tab">İngilizce</a>
                                </li>
                                <li>
                                    <a href="#tab_3" data-toggle="tab">Rusça</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="tab_1">
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default required">
                                                <label>Ad Soyad</label>
                                                @if (ViewBag.Entity != null)
                                                {
                                                    if (ViewBag.Entity.name_tr != null)
                                                    {
                                                       @Html.TextBoxFor(model => Model.Item1.name_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_tr", @Value = ViewBag.Entity.name_tr })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.name_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_tr", })
                                                    }

                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.Item1.name_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_tr", })
                                                }

                                                
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default required">
                                                <label>Pozisyon</label>
                                                @if (ViewBag.Entity != null)
                                                {
                                                    if (ViewBag.Entity.position_tr != null)
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.position_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "position_tr", @Value = ViewBag.Entity.position_tr })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.position_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "position_tr", })
                                                    }

                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.Item1.position_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "position_tr", })
                                                }

                                               
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-8">
                                            <input type="file" id="image_tr7" name="image_tr7" class="file">
                                            <div class="form-group form-group-default required">
                                                <label>Resim</label>
                                                @Html.TextBoxFor(Model => Model.Item1.imageName_tr, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "imageName_tr", @Id = "imageName_tr" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-folder-open"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        @Html.TextAreaFor(model => Model.Item1.content_tr, htmlAttributes: new { @class = "summernote", @Name = "content_tr", @id = "summernote_tr" })
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tab_2">
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default required">
                                                <label>Ad Soyad</label>
                                                @if (ViewBag.Entity != null)
                                                {
                                                    if (ViewBag.Entity.name_en != null)
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.name_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_en", @Value = ViewBag.Entity.name_en })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.name_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_en", })
                                                    }

                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.Item1.name_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_en", })
                                                }
                                                
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default required">
                                                <label>Pozisyon</label>
                                                @if (ViewBag.Entity != null)
                                                {
                                                    if (ViewBag.Entity.position_en != null)
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.position_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "position_en", @Value = ViewBag.Entity.position_en })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.position_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "position_en", })
