                                    </div>
                                    
                                    <div class="row">
                                        <div class="col-md-8">
                                            <input type="file" id="image_en7" name="image_en7" class="file">
                                            <div class="form-group form-group-default required">
                                                <label>Resim</label>
                                                @Html.TextBoxFor(Model => Model.Item1.imageName_en, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "imageName_en", @Id = "imageName_en" })
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-folder-open"></i></button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        @Html.TextAreaFor(model => Model.Item1.content_en, htmlAttributes: new { @class = "summernote", @Name = "content_en", @id = "summernote_en" })
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="tab_3">
                                    <div class="row clearfix">
                                        <div class="col-md-6">
                                            <div class="form-group form-group-default required">
                                                <label>Ad Soyad</label>
                                                @if (ViewBag.Entity != null)
                                                {
                                                    if (ViewBag.Entity.name_ru != null)
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.name_ru, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_ru", @Value = ViewBag.Entity.name_ru })
                                                    }
                                                    else
                                                    {
                                                        @Html.TextBoxFor(model => Model.Item1.name_ru, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_ru", })
                                                    }

                                                }
                                                else
                                                {
                                                    @Html.TextBoxFor(model => Model.Item1.name_ru, htmlAttributes: new { @style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name_ru", })
                                                }
                                                
                                            </div>
                                        </div>
                                        <div class="col-md-6">
