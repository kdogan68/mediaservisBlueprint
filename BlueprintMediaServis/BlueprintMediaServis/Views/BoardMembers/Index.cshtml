<body class="fixed-header">
    <div class="page-container">
        <div class="page-content-wrapper ">
            <div class="content ">
                @using (Html.BeginForm("Insert", "BoardMembers", FormMethod.Post, new { enctype = "multipart/form-data", }))
            {
                    @Html.AntiForgeryToken()
                    <div class="card card-transparent">

                        @if (ViewBag.Status != null)
                        {
                            if (ViewBag.Status.ToString().Equals("missingname"))
                            {
                                <div class="alert alert-warning" role="alert">
                                    <button class="close" data-dismiss="alert"></button>
                                    <strong>Uyarı: </strong>Eksik ad soyad tespit edildi. Lütfen ad soyadların hepsini giriniz.
                                </div>
                            }
                            else if (ViewBag.Status.ToString().Equals("success"))
                            {
                                <div class="alert alert-success" role="alert">
                                    <button class="close" data-dismiss="alert"></button>
                                    <strong>İşlem Başarılı: </strong>Sayfa eklendi.
                                </div>
                            }
                            else if (ViewBag.Status.ToString().Equals("missingPosition"))
                            {
                                <div class="alert alert-warning" role="alert">
                                    <button class="close" data-dismiss="alert"></button>
                                    <strong>Uyarı: </strong>Eksik pozisyon tespit edildi. Lütfen pozisyonların hepsini giriniz.
                                </div>
                            }
                            else if (ViewBag.Status.ToString().Equals("missingContent"))
                            {
                                <div class="alert alert-warning" role="alert">
                                    <button class="close" data-dismiss="alert"></button>
                                    <strong>Uyarı: </strong>Eksik açıklama tespit edildi. Lütfen açıklamaların hepsini giriniz.
                                </div>
                            }
