<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(BlueprintMediaServis.Resource.Language.appName,"Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav nav-tabs">
                <li>@Html.ActionLink("En", "Change", "Language", new { LanguageAbbrevation = "en" }, null)</li>
                <li>@Html.ActionLink("Tr", "Change", "Language", new { LanguageAbbrevation = "tr" }, null)</li>
                <li>@Html.ActionLink("Ru", "Change", "Language", new { LanguageAbbrevation = "ru" }, null)</li>

                </ul>

                <ul class="nav navbar-nav ">
                    <li>@Html.ActionLink(BlueprintMediaServis.Resource.Language.home, "Index", "Home")</li>
                    <li>@Html.ActionLink(BlueprintMediaServis.Resource.Language.magazine, "Index", "Magazine")</li>
                    <li>@Html.ActionLink(BlueprintMediaServis.Resource.Language.catalog, "Index", "Catalog")</li>
                    <li>@Html.ActionLink(BlueprintMediaServis.Resource.Language.video, "Index", "Video")</li>
                    <li>@Html.ActionLink(BlueprintMediaServis.Resource.Language.menu, "Index", "Menu")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blueprint Digital Solutions</p>
        </footer>
    </div>

  
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
