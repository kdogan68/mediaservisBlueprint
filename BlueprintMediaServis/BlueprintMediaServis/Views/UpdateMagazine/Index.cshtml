    <link href="assets/plugins/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="assets/plugins/jquery-scrollbar/jquery.scrollbar.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="assets/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="assets/plugins/switchery/css/switchery.min.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="pages/css/pages-icons.css" rel="stylesheet" type="text/css">
    <link class="main-stylesheet" href="pages/css/pages.css" rel="stylesheet" type="text/css" />
    <link rel="Stylesheet" type="text/css" href="~/blueprintmediaservis.css">

</head>
<body class="fixed-header">
    <div class="page-container">
        <div class="page-content-wrapper ">
            <!-- START PAGE CONTENT -->
            <div class="content ">

                <!-- dergi güncelleme popup -->
                @using (Html.BeginForm("Update", "UpdateMagazine", FormMethod.Post, new { enctype = "multipart/form-data", }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => Model.id)

                  

                    <div class="panel">
                        <div class="panel-heading">
                            <h5 class="modal-title" id="exampleModalLongTitle">@BlueprintMediaServis.Resource.Language.edit</h5>

                        </div>
                        <div class="panel-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a href="#tab_1" data-toggle="tab">Türkçe</a>
                                </li>
                                <li>
                                    <a href="#tab_2" data-toggle="tab">İngilizce</a>
                                </li>
                                <li>
                                    <a href="#tab_3" data-toggle="tab">Rusça</a>
                                </li>
                            </ul>
                            <div class="tab-content">

                                <div class="tab-pane fade active" id="tab_1">

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <input type="file" id="pdf_tr" name="pdf_tr" class="file">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                            @Html.TextBoxFor(Model => Model.pdfName_tr, htmlAttributes: new { @class = "form-control input lg", @Name = "pdfName_tr", @Value = ViewData["ttle_tr"] })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="file" id="image_tr" name="image_tr" class="file">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                                            @Html.TextBoxFor(Model => Model.imageName_tr, htmlAttributes: new { @class = "form-control input lg", @Name = "imageName_tr" })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.TextBoxFor(Model => Model.title_tr, htmlAttributes: new { @class = "form-control input lg", @Name = "title_tr" })
                                        </div>
                                    </div>

                                </div>

                                <div class="tab-pane fade" id="tab_2">

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <input type="file" id="pdf_en" name="pdf_en" class="file">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                            @Html.TextBoxFor(Model => Model.pdfName_en, htmlAttributes: new { @class = "form-control input lg", @Name = "pdfName_en" })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="file" id="image_en" name="image_en" class="file">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                                            @Html.TextBoxFor(Model => Model.imageName_en, htmlAttributes: new { @class = "form-control input lg", @Name = "imageName_en" })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.TextBoxFor(Model => Model.title_en, htmlAttributes: new { @class = "form-control input lg", @Name = "title_en" })
                                        </div>
                                    </div>

                                </div>

                                <div class="tab-pane fade" id="tab_3">

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <input type="file" id="pdf_ru" name="pdf_ru" class="file">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                                            @Html.TextBoxFor(Model => Model.pdfName_ru, htmlAttributes: new { @class = "form-control input lg", @Name = "pdfName_ru" })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="file" id="image_ru" name="image_ru" class="file">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-picture"></i></span>
                                            @Html.TextBoxFor(Model => Model.imageName_ru, htmlAttributes: new { @class = "form-control input lg", @Name = "imageName_ru" })
                                            <span class="input-group-btn">
                                                <button class="browse btn btn-primary input-lg" type="button"><i class="glyphicon glyphicon-search"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group col-xs-12">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                            @Html.TextBoxFor(Model => Model.title_ru, htmlAttributes: new { @class = "form-control input lg", @Name = "title_ru" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="panel-footer">
                            @Html.ActionLink("Kapat", "Index", "Magazine",new object {},new {@class= "btn btn-secondary" })
                            
                            <button type="submit" class="btn btn-primary">@BlueprintMediaServis.Resource.Language.save</button>
                        </div>
                    </div>
                }
            </div>


        </div>
    </div>
</body>