@model  BlueprintMediaServis.Models.Menu
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>





@using (Html.BeginForm("Insert", "Menu", FormMethod.Post, new { enctype = "multipart/form-data", }))
{
    @Html.AntiForgeryToken()
   


    <div class="container" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="row" role="document">
            <div class="panel">
                <div class="panel-heading">
                    <h5 class="modal-title" id="exampleModalLongTitle">@BlueprintMediaServis.Resource.Language.edit</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="panel-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                    <div class="form-group">
                        <div class="input-group col-xs-12">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            @Html.TextBoxFor(model => Model.name, htmlAttributes: new { @class = "form-control input lg", @Name = "name", })
                        </div>
                    </div>

                    <div class="form-group">
                    <div class="input-group col-xs-12">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                        @Html.TextAreaFor(model => Model.content, htmlAttributes: new { @class = "form-control input lg", @Name = "content", })
                    </div>
                </div>

                </div>


                <div class="panel-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@BlueprintMediaServis.Resource.Language.close</button>
                    <button type="submit" class="btn btn-primary">@BlueprintMediaServis.Resource.Language.save</button>
                </div>
            </div>
        </div>
    </div>
}