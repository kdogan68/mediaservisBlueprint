@model Tuple<BlueprintMediaServis.Models.Menu, IEnumerable<BlueprintMediaServis.Models.Menu>>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>

</head>
<body class="fixed-header">
    <div class="page-container">
        <div class="page-content-wrapper ">
            <div class="content ">
                @using (Html.BeginForm("Insert", "Menu", FormMethod.Post, new { enctype = "multipart/form-data", }))
            {
                    @Html.AntiForgeryToken()
                    <div class="card card-transparent">
                        <div class="card-block">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row clearfix">
                                <div class="col-md-6">
                                    <div class="form-group form-group-default required">
                                        <label>Başlık</label>
                                        @Html.TextBoxFor(model => Model.Item1.name, htmlAttributes: new {@style = "width: 100%; max-width: 100%;", @class = "form-control input lg", @Name = "name", })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group form-group-default required">
                                        <label>Dil</label>
                                        @Html.DropDownListFor(Model => Model.Item1.language, new SelectList(new List<Object>{
                                                                                      new { value = "Türkçe" , text = "Türkçe"  },
                                                                                      new { value = "İngilizce"   , text = "İngilizce" },
                                                                                      new { value = "Rusça" , text = "Rusça"}}, "value", "text", Model.Item1.language
                                                                                      ), htmlAttributes: new { @class = "form-control input lg", @Name = "language" })

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group form-group-default input-group">
                                        <div class="form-input-group">
                                            <label>İçerik</label>
                                            @Html.TextAreaFor(model => Model.Item1.content,10,120, htmlAttributes: new { @style = "width: 100%; max-width: 100%; height: 100%; max-height: 100%;", @class = "form-control input lg", @Name = "content" })
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="clearfix">
                        <button type="submit" class="btn btn-complete">Kaydet</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

